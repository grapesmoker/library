<div class="modal fade" role="dialog" tabindex="-1" id="author-edit-dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-label">{{#if newAuthor}}Add new author{{else}}Edit author{{/if}}</h4>
            </div>
            <div class="modal-body">
                <form id="author-form">
                    <fieldset>
                        <div class="form-group">
                            <label for="first-name">First name:</label>
                            <input type="text" name="first-name" class="form-control" id="first-name"
                                   value="{{#if newAuthor}}{{else}}{{first_name}}{{/if}}">
                        </div>
                        <div class="form-group">
                            <label for="middle-name">Middle name:</label>
                            <input type="text" name="middle-name" class="form-control" id="middle-name"
                                   value="{{#if newAuthor}}{{else}}{{middle_name}}{{/if}}">
                        </div>
                        <div class="form-group">
                            <label for="last-name">Last name:</label>
                            <input type="text" name="last-name" class="form-control" id="last-name"
                                   value="{{#if newAuthor}}{{else}}{{last_name}}{{/if}}">
                        </div>
                    </fieldset>
                </form>
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" id="save-author" data-mode="{{#if newAuthor}}new{{else}}existing{{/if}}"
                            {{#if newAuthor}}data-id="{{id}}"{{/if}}>
                        <i class="fa fa-edit"></i> {{#if newAuthor}}Create and add author{{else}}Save author changes{{/if}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>