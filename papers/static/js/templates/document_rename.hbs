<div class="modal fade" role="dialog" tabindex="-1" id="document-rename-dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-label">Rename document</h4>
            </div>
            <div class="modal-body">
                <!--<form id="rename-document-form">-->
                  <div class="form-group">
                    <label for="pattern">Pattern:</label>
                    <input type="text" id="rename-pattern" name="pattern" class="form-control">
                    <span class="help-block">
                      The following patterns are available: {title}, {author},
                      {publisher}, {journal}, {category}</span>
                  </div>
                <!--</form>-->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"
                  id="rename-document-ok">Ok</button>
                <button type="button" class="btn btn-primary"
                  id="rename-document-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
